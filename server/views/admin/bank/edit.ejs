<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank/">bank</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Edit bank</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="post">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Masukkan Nama Pemilik</label>
                  <input
                    name="name"
                    type="text"
                    class="form-control"
                    id="name"
                    placeholder="Masukkan Nama Pemilik Bank"
                    value="<%= bank.name  %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="bankName">Masukkan Nama</label>
                  <input
                    name="bankName"
                    type="text"
                    class="form-control"
                    id="bankName"
                    placeholder="Masukkan Nama Bank"
                    value="<%= bank.bankName  %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="noRekening">Masukkan No Rekening</label>
                  <input
                    name="noRekening"
                    type="number"
                    class="form-control"
                    id="noRekening"
                    placeholder="Masukkan No Rekening Anda"
                    value="<%= bank.noRekening  %>"
                    required
                  />
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
